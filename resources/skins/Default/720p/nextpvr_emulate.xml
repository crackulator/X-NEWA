<window type="window">

	<id>3015</id>
	<allowoverlays>true</allowoverlays>
	<type>window</type>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>        
	<controls>
		<control type="videowindow" id="200">
            <depth>DepthBackground</depth>        
			<top>0</top>
			<left>0</left>
			<width>100%</width>
			<height>100%</height>
            <backgroundcolor>0</backgroundcolor>
			<visible>Player.HasVideo</visible>            
		</control>    
		<control type="image" id="100">
			<top>0</top>
			<left>0</left>
			<width>100%</width>
			<height>100%</height>
			<visible>String.contains(Window.Property(showosd), true)</visible>
		</control>
        <control type="label" id="110">
            <left>460</left>
            <top>240</top>
            <width>500</width>
            <height>200</height>
            <label>Hit Back to return</label>
            <font>font35</font>
			<textcolor>white</textcolor>            
			<visible>Player.HasVideo + String.contains(Window.Property(sdlmode),false)</visible>
		</control>
		<control type="label" id="120">
            <left>460</left>
            <top>340</top>
            <width>500</width>
            <height>200</height>
            <label></label>
			<textcolor>yellow</textcolor>            
			<visible>Player.HasVideo + String.contains(Window.Property(sdlmode),false)</visible>
		</control>
        <control type="label">
                <left>1000</left>
                <top>680</top>        
                <width>200</width>
                <height>25</height>
                <font>font20</font>
                <align>right</align>
                <aligny>center</aligny>
                <label>$INFO[Player.Time]/$INFO[MusicPlayer.Duration]</label>
                <textcolor>orange</textcolor>
                <visible>Player.HasAudio + !String.IsEmpty(MusicPlayer.Duration)</visible>
                <scroll>true</scroll>
            </control>           
            <control type="label">
                <left>1000</left>
                <top>680</top>        
                <width>200</width>
                <height>25</height>
                <font>font20</font>
                <align>right</align>
                <aligny>center</aligny>
                <label>$INFO[Player.Time]</label>
                <textcolor>orange</textcolor>
                <visible>Player.HasAudio + String.IsEmpty(MusicPlayer.Duration)</visible>
                <scroll>true</scroll>
            </control>  
    </controls>        
</window>
