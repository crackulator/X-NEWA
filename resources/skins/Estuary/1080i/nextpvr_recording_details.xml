							<font>font13</font>
							<textcolor>button_focus</textcolor>
							<label>$ADDON[script.xbmc.x-newa 30056]:</label>
						</control>
					</control>
					<control type="grouplist" id="4000">
						<top>120</top>
						<left>425</left>
						<control type="label" id="310">
							<description>Episode title</description>
							<width>800</width>
							<height>30</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>font13</font>
							<textcolor>white</textcolor>
							<label>-</label>
							<visible>!IsEmpty(Control.GetLabel(310))</visible>
						</control>
						<control type="label">
							<description>Status</description>
							<width>800</width>
							<height>30</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>font13</font>
							<textcolor>white</textcolor>
							<label>$INFO[Control.GetLabel(309)]</label>
							<visible>!String.IsEqual(Control.GetLabel(309),"Failed")</visible>
						</control>
						<control type="label">
							<description>Status</description>
							<width>800</width>
							<height>30</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>font13</font>
							<textcolor>white</textcolor>
							<label>[COLOR red]$INFO[Control.GetLabel(309)][/COLOR]</label>
							<visible>String.IsEqual(Control.GetLabel(309),"Failed")</visible>
						</control>
						<control type="label" id="304">
							<description>Channel</description>
							<width>800</width>
							<height>30</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>font13</font>
							<textcolor>white</textcolor>
							<label>-</label>
						</control>
						<control type="label">
							<description>Air Date</description>
							<width>800</width>
							<height>30</height>
