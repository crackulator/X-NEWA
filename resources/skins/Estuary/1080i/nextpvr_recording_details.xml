<!-- ############ End Labels ############ -->
<!-- ############ Begin Description ############ -->				
					<control type="textbox" id="311">
						<description>Description</description>
						<top>425</top>
						<width>1300</width>
						<height>120</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<pagecontrol>61</pagecontrol>
						<label>-</label>
						<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
					</control>
<!-- ############ End Description ############ -->				
<!-- ############ Begin Navigation Buttons ############ -->
					<control type="grouplist" id="2000">
						<top>600</top>
						<width>1310</width>
						<align>center</align>
						<orientation>horizontal</orientation>
						<itemgap>-20</itemgap>
						<onleft>2000</onleft>
						<onright>2000</onright>
						<onup>9000</onup>
						<ondown>9000</ondown>
						<include content="DefaultDialogButton">
							<description>Resume</description>
							<param name="id" value="258" />
							<param name="width" value="230" />
							<param name="label" value="$ADDON[script.xbmc.x-newa 30032]" />
						</include>
						<include content="DefaultDialogButton">
							<description>Unwatch</description>
							<param name="id" value="259" />
							<param name="width" value="230" />
							<param name="label" value="$ADDON[script.xbmc.x-newa 30033]" />
						</include>
						<include content="DefaultDialogButton">
							<description>Quick Record</description>
							<param name="id" value="252" />
							<param name="label" value="$ADDON[script.xbmc.x-newa 30035] $ADDON[script.xbmc.x-newa 30034]" />
						</include>
						<include content="DefaultDialogButton">
							<description>Record</description>
							<param name="id" value="260" />
							<param name="width" value="230" />
							<param name="label" value="$ADDON[script.xbmc.x-newa 30034]" />
						</include>
						<include content="DefaultDialogButton">
							<description>Play</description>
							<param name="id" value="254" />
							<param name="width" value="230" />
							<param name="label" value="$ADDON[script.xbmc.x-newa 30036]" />
						</include>
						<include content="DefaultDialogButton">
							<description>Delete</description>
							<param name="id" value="251" />
							<param name="width" value="230" />
							<param name="label" value="$ADDON[script.xbmc.x-newa 30038]" />
						</include>
						<include content="DefaultDialogButton">
							<description>Archive (or Cancel)</description>
							<param name="id" value="257" />
							<param name="width" value="230" />
							<param name="label" value="$ADDON[script.xbmc.x-newa 30039]" />
