							<width>800</width>
							<height>30</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>font13</font>
							<textcolor>white</textcolor>
							<label>$INFO[Control.GetLabel(318)] $ADDON[script.xbmc.x-newa 30029]</label>
