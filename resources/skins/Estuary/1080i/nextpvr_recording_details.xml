							<aligny>center</aligny>
							<width>160</width>
							<height>30</height>
							<font>font13</font>
							<textcolor>button_focus</textcolor>
							<label>$ADDON[script.xbmc.x-newa 30013]:</label>
							<visible>!IsEmpty(Control.GetLabel(309))</visible>
						</control>
						<control type="label">
