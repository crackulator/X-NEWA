<window>
	<id>3005</id>
	<defaultcontrol>999</defaultcontrol>
	<type>window</type>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
<!-- ############ Begin Background ############ -->
		<include>DefaultBackground</include>
		<include content="ContentPanel">
			<param name="width" value="730" />
		</include>
		<include content="TopBar">
			<param name="breadcrumbs_label" value="$ADDON[script.kodi.knew4v5 30000]" />
            <param name="sublabel" value="$ADDON[script.kodi.knew4v5 30007] $ADDON[script.kodi.knew4v5 30002] $INFO[Container(600).CurrentItem,, / ]$INFO[Container(600).NumItems]" />
		</include>
		<include content="BottomBar">
			<param name="info_visible" value="true" />
		</include>
<!-- ############ End Background ############ -->
<!-- ############ Begin Content ############ -->
		<control type="group">
			<description>Content Group</description>
<!-- ############ Begin Recurring Recordings Table ############ -->
			<control type="group">
				<top>167</top>
				<left>0</left>
<!-- ############ Begin Recordings Recordings Header ############ -->
				<control type="group">
					<description>Recurring Recordings Header</description>
					<aligny>center</aligny>
                    <left>700</left>
					<control type="label">
						<description>Title</description>
						<width>500</width>
						<font>font13_title</font>
						<align>left</align>
						<label>$ADDON[script.kodi.knew4v5 30011]</label>
					</control>
					<control type="label">
						<description>Priority</description>
						<left>510</left>
						<width>150</width>
						<font>font13_title</font>
						<align>center</align>
						<label>$ADDON[script.kodi.knew4v5 30042]</label>
					</control>
					<control type="label">
						<description>Type</description>
						<left>680</left>
						<width>150</width>
						<font>font13_title</font>
						<align>left</align>
						<label>$ADDON[script.kodi.knew4v5 30043]</label>
					</control>
					<control type="label">
						<description>Channel</description>
						<left>830</left>
						<width>230</width>
						<font>font13_title</font>
						<align>left</align>
						<label>$ADDON[script.kodi.knew4v5 30012]</label>
					</control>
				</control>
<!-- ############ End Recordings Header ############ -->
<!-- ############ Begin Recordings Content ############ -->
				<control type="list" id="600">
					<top>78</top>
					<width>1300</width>
					<height>650</height>
					<onleft>9000</onleft>
					<onright>6000</onright>
					<onup>600</onup>
					<ondown>600</ondown>
					<viewtype label="Schedules">wide</viewtype>
					<pagecontrol>6000</pagecontrol>
					<scrolltime>0</scrolltime>
					<preloaditems>12</preloaditems>
                    <left>670</left>
					<itemlayout height="54">
						<control type="label">
							<left>30</left>
							<width>497</width>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Property(title)]</label>
							<scroll>true</scroll>
							<scrollspeed>30</scrollspeed>
						</control>
						<control type="label">
							<left>540</left>
							<width>150</width>
							<aligny>center</aligny>
							<align>center</align>
							<label>$INFO[ListItem.Property(priority)]</label>
						</control>
						<control type="label">
							<left>710</left>
							<width>150</width>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Property(rectype)]</label>
						</control>
						<control type="label">
							<left>870</left>
							<width>227</width>
							<aligny>center</aligny>
							<align>left</align>
							<label>$INFO[ListItem.Property(channel)]</label>
						</control>
					</itemlayout>
					<focusedlayout height="54">
						<control type="image">
    	                    <left>0</left>
        	                <top>2</top>
							<width>1250</width>
            	            <visible>Control.HasFocus(600)</visible>
                	        <texture colordiffuse="button_focus">lists/focus.png</texture>
		                </control>
						<control type="label">
							<left>30</left>
							<width>497</width>
							<aligny>center</aligny>
                            <align>left</align>
							<label>$INFO[ListItem.Property(title)]</label>
							<scroll>true</scroll>
							<scrollspeed>30</scrollspeed>
						</control>
						<control type="label">
							<left>540</left>
							<width>150</width>
							<aligny>center</aligny>
                            <align>center</align>
							<label>$INFO[ListItem.Property(priority)]</label>
						</control>
						<control type="label">
							<left>710</left>
							<width>150</width>
							<aligny>center</aligny>
							<align>left</align>
							<label>$INFO[ListItem.Property(rectype)]</label>
						</control>
						<control type="label">
							<left>870</left>
							<width>227</width>
							<aligny>center</aligny>
							<align>left</align>
							<label>$INFO[ListItem.Property(channel)]</label>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="6000">
					<left>1905</left>
					<top>78</top>
					<width>15</width>
					<height>650</height>
					<onleft>600</onleft>
					<onright>600</onright>
					<orientation>vertical</orientation>
				</control>
				<control type="group">
					<left>150</left>
					<control type="image">
						<animation effect="fade" delay="400" start="0" end="100" time="100">WindowOpen</animation>
						<description>No Artwork Fallback</description>
						<width>270</width>
						<height>380</height>
						<texture>DefaultVideo.png</texture>
						<aspectratio>stretch</aspectratio>
						<colordiffuse>99FFFFFF</colordiffuse>
					</control>
					<control type="image">
						<description>Current Fanart image</description>
						<width>400</width>
						<height>600</height>
						<texture>$INFO[Container(600).ListItem.Property(showicon)]</texture>
						<aspectratio>keep</aspectratio>
					</control>
                </control>
<!-- ############ End Recordings Content ############ -->
			</control>
<!-- ############ End Recurring Recordings Table ############ -->
		</control>
<!-- ############ End Content ############ -->
<!-- ############ Begin Navigation Buttons ############ -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9000">
				<top>90</top>
				<onup>270</onup>
				<ondown>250</ondown>
				<onleft>-</onleft>
				<onright>999</onright>
				<control type="label" id="200">
					<description>NextPVR Options</description>
					<include>MediaMenuLabelCommon</include>
					<label>$ADDON[script.kodi.knew4v5 30000] $ADDON[script.kodi.knew4v5 30018]</label>
				</control>
				<control type="button" id="250">
					<description>Refresh</description>
					<include>MediaMenuItemsCommon</include>
					<label>$ADDON[script.kodi.knew4v5 30024]</label>
					<enable>!string.contains(Window.Property(busy),true)+!string.contains(Window.Property(offline),true)</enable>
				</control>
				<control type="button" id="253">
					<description>Sort Order</description>
					<include>MediaMenuItemsCommon</include>
					<label>$ADDON[script.kodi.knew4v5 30122]</label>
					<enable>!string.contains(Window.Property(busy),true)</enable>
				</control>
				<control type="button" id="270">
					<description>Fullscreen</description>
					<include>MediaMenuItemsCommon</include>
					<label>$ADDON[script.kodi.knew4v5 30044]</label>
					<onclick>fullscreen</onclick>
					<enable>!string.contains(Window.Property(busy),true)</enable>
					<visible>Player.HasVideo</visible>
				</control>
			</control>
		</control>
		<control type="button" id="999">
			<description>Fake button for initial focus</description>
			<left>1280</left>
			<top>720</top>
			<width>1</width>
			<height>1</height>
			<label>-</label>
			<font>-</font>
			<onleft>9000</onleft>
			<onright>600</onright>
			<onup>600</onup>
			<ondown>600</ondown>
            <texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>true</visible>
		</control>
<!-- ############ End Navigation Buttons ############ -->
<!-- ############ Begin Busy Indicator ############ -->
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="960,540" tween="back" time="240" />
				<effect type="fade" end="100" time="240" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="960,540" easing="in" tween="back" time="240" />
				<effect type="fade" start="100" end="0" time="240" />
			</animation>
			<visible>string.contains(Window.Property(busy),true)</visible>
			<control type="group">
				<visible>String.IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
				<animation type="Visible" reversible="false">
					<effect type="zoom" start="80" end="100" center="960,540" tween="back" time="240" />
					<effect type="fade" end="100" time="240" />
				</animation>
				<animation type="Hidden" reversible="false">
					<effect type="zoom" start="100" end="80" center="960,540" easing="in" tween="back" time="240" />
					<effect type="fade" start="100" end="0" time="240" />
				</animation>
				<visible>!Window.IsActive(startup)</visible>
				<control type="image">
					<texture>colors/black.png</texture>
					<include>FullScreenDimensions</include>
					<animation effect="fade" start="100" end="70" time="0" condition="true">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="240" condition="Window.IsVisible(fullscreenvideo)">Conditional</animation>
					<animation effect="fade" end="100" time="560">WindowOpen</animation>
					<animation effect="fade" start="100" end="0" time="240">WindowClose</animation>
				</control>
				<control type="image">
					<depth>DepthMax</depth>
					<left>920</left>
					<top>513</top>
					<width>80</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<animation effect="rotate" end="-45" center="auto" time="200" delay="600" loop="true" reversible="false" condition="true">Conditional</animation>
					<texture colordiffuse="button_focus">spinner.png</texture>
					<animation effect="fade" end="100" time="300" delay="200">WindowOpen</animation>
				</control>
				<control type="image">
					<depth>DepthMax</depth>
					<left>935</left>
					<top>528</top>
					<width>50</width>
					<height>50</height>
					<aspectratio>keep</aspectratio>
					<animation effect="rotate" end="45" center="auto" time="200" delay="600" loop="true" reversible="false" condition="true">Conditional</animation>
					<texture flipx="true" colordiffuse="button_focus">spinner.png</texture>
					<animation effect="fade" end="100" time="300" delay="200">WindowOpen</animation>
				</control>
				<control type="label">
					<description>Busy label</description>
					<left>1010</left>
					<top>513</top>
					<width>200</width>
					<height>65</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font12</font>
					<label>$LOCALIZE[31004]</label>
				</control>
			</control>
		</control>
<!-- ############ End Busy Indicator ############ -->
	</controls>
</window>
